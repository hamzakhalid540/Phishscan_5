{
  "manifest_version": 3,
  "name": "PhishScan URL Checker",
  "version": "1.0",
  "description": "Scan any URL using your local PhishScan project running on localhost.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "http://localhost:5000/*"
  ],
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}